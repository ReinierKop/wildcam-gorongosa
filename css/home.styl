.home-page
  color: white

  .home-content-container
    margin: 0 auto
    max-width: 1000px
    padding: 10em 3vw

  .home-call-to-action-button
    @extends $reset-button
    border-radius: 4px
    line-height: 50px
    text-align: center
    width: 250px

  .home-hero
    background: url('assets/home-background.jpg') no-repeat center center
    background-size: cover
    height: 1000px
    text-align: center
    width: 100%

    .title
      font-size: 3.5em
      font-weight: 400
      margin: 3.5rem 0

    .home-content-container
      align-items: center
      display: flex
      flex-direction: column
      justify-content: center
      max-width: 550px

    .home-call-to-action-button
      background-color: #D4B46A
      border: solid 2px #D4B46A
      margin-bottom: 1em

      &.ghost-button
        background-color: transparent
        border: solid 2px #D4B46A

        &:hover
          background-color: #553B00

      &:hover
        background-color: lighten(#D4B46A, 10%)

  .home-promo
    background-color: #edf0f3
    color: #374766

    .home-content-container
      display: flex
      flex-wrap: wrap
      justify-content: space-around

      @media screen and (max-width: 900px)
        flex-wrap: wrap

      img
        border-radius: 50%

      .markdown
        align-self: center

        h2
          font-style: italic
          text-transform: uppercase

        p
          color: #777777
          font-size: 1.125em
          max-width: 550px

        a, a&:visited, a&:active
          color: #374766
          font-style: italic
          text-decoration: none

          &:hover
            color: lighten(#374766, 20%)

        a:before
          background: url(./assets/arrow-icon.png) no-repeat center center
          display: inline-block
          content: ''
          height: 16px
          margin: 0.25em 0.5em 0 0
          vertical-align: text-top
          width: 16px

    &:nth-child(even)
      background-color: white

      img
        order: 2

        @media screen and (max-width: 900px)
          order: initial

  .home-call-to-action
    align-items: center
    background: url(./assets/animals.jpg) no-repeat center center
    background-size: cover
    color: #f6f6f6
    display: flex
    flex-direction: column
    height: 325px
    justify-content: center
    width: 100%

    h2
      letter-spacing: 0.1em
      text-transform: uppercase

    .home-call-to-action-button
      background-color: #804A15

      &:hover
        background-color: lighten(#804A15, 10%)
